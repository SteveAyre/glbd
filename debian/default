
# Uncomment this to start glbd on startup
# START_DAEMON="true"

# The TCP port to accept MySQL connections on
LISTEN_PORT="3307"

# The FIFO to accept MySQL connections on
FIFO="/var/run/glbd.sock"

# The TCP port for controlling the glbd daemon at runtime
CONTROL_PORT="3308"

# The list of MySQL nodes to send requests to
TARGETS="127.0.0.1:3306:1"

# Number of threads to run
THREADS="2"

